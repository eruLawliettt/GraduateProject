@page
@model GraduateProject.Pages.Curriculum.IndexModel

@{

}

<div>
    <div class="d-flex ms-3">
        <a class="btn btn-primary" asp-page="Create" asp-route-planId="">
            <i class="bi bi-clipboard2-plus-fill"></i>
            Добавить учебный план
        </a>
    </div>

    <div class="d-flex">
        <ul class="list-group m-3">
            @foreach (var plan in Model.Plans)
            {
                <li class="card text-white bg-secondary mb-3">
                    @if (plan.GroupId != null)
                    {
                        <div class="card-header">Учебный план группы: @plan.Group.Name</div>
                    }
                    else
                    {
                        <div class="card-header">Учебный план без группы</div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">Заглушка</h5>
                        <p class="card-text">Заглушка</p>
                    </div>

                </li>
            }
        </ul>
    </div>
    

</div>
