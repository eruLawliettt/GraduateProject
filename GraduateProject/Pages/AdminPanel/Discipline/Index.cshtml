@page
@model GraduateProject.Pages.AdminPanel.Discipline.IndexModel
@{
}

<div>
    <div class="mt-3">
        <a class="btn btn-primary" asp-page="Create">
            <i class="bi bi-clipboard2-plus-fill"></i>
            Добавить дисциплину
        </a>
    </div>

    <div class="mt-3">
        <a class="btn btn-primary" asp-page="../Index">
            <i class="bi bi-clipboard2-plus-fill"></i>
            Назад
        </a>
    </div>

    <div class="d-flex mt-3">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">Код</th>
                    <th scope="col">Название</th>
                    <th scope="col">Описание</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var discipline in Model.Disciplines)
                {
                    <tr>
                        <th>@discipline.Code</th>
                        <th>@discipline.Name</th>
                        <th>@discipline.Description</th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>