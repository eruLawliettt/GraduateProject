@page
@model GraduateProject.Pages.AdminPanel.Employee.IndexModel
@{
}

<div>
    <div class="mt-3">
        <a class="btn btn-primary" asp-page="Create">
            <i class="bi bi-clipboard2-plus-fill"></i>
            Добавить работника
        </a>
    </div>

    <div class="mt-3">
        <a class="btn btn-primary" asp-page="../Index">
            <i class="bi bi-clipboard2-plus-fill"></i>
            Назад
        </a>
    </div>

    <div class="d-flex mt-3">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">Имя</th>
                    <th scope="col">Отчество</th>
                    <th scope="col">Фамилия</th>
                    <th scope="col">Дата рождения</th>
                    <th scope="col">Гендер</th>
                    <th scope="col">Должности</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model.Employees)
                {
                    <tr>
                        <th>@employee.FirstName</th>
                        <th>@employee.MiddleName</th>
                        <th>@employee.LastName</th>
                        <th>@employee.DateOfBirth.ToShortDateString()</th>
                        @if (employee.Gender == false)
                        {
                            <th>Ж</th>
                        }
                        else
                        {
                            <th>М</th>
                        }
                        <th>
                            <select class="form-select">
                                <option selected>Должности(@employee.EmployeePositions.Count())</option>
                                @foreach (var employeePosition in employee.EmployeePositions)
                                {
                                    <option>@employeePosition.Position.Name</option>
                                }
                            </select>
                        </th>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>