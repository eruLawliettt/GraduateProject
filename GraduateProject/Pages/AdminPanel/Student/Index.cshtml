@page
@model GraduateProject.Pages.AdminPanel.Student.IndexModel
@{
}

<div>
    <div class="mt-3">
        <a class="btn btn-primary" asp-page="Create">
            <i class="bi bi-clipboard2-plus-fill"></i>
            Добавить студента
        </a>
    </div>

    <div class="mt-3">
        <a class="btn btn-primary" asp-page="../Index">
            <i class="bi bi-clipboard2-plus-fill"></i>
            Назад
        </a>
    </div>

    <div class="d-flex mt-3">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">Имя</th>
                    <th scope="col">Отчество</th>
                    <th scope="col">Фамилия</th>
                    <th scope="col">Дата рождения</th>
                    <th scope="col">Гендер</th>
                    <th scope="col">Группа</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model.Students)
                {
                    <tr>
                        <th>@student.FirstName</th>
                        <th>@student.MiddleName</th>
                        <th>@student.LastName</th>
                        <th>@student.DateOfBirth.ToShortDateString()</th>
                        @if (student.Gender == false)
                        {
                            <th>Ж</th>
                        }
                        else
                        {
                            <th>М</th>
                        }
                        <th>@student.Group.Name</th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>