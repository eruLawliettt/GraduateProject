@page
@model GraduateProject.Pages.AdminPanel.StudyDirection.CreateModel
@{
}

<form class="col-6 mx-auto my-3" method="post">

    <div class="form-floating mb-3">
        <input class="form-control" asp-for="Input.Code" aria-required="true" />
        <label class="form-label" asp-for="Input.Code"></label>
    </div>

    <div class="form-floating mb-3">
        <input class="form-control" asp-for="Input.Name" aria-required="true" />
        <label class="form-label" asp-for="Input.Name"></label>
    </div>

    <div class="form-floating mb-3">
        <input class="form-control" asp-for="Input.Description" aria-required="true" />
        <label class="form-label" asp-for="Input.Description"></label>
    </div>

    <div class="form-floating mb-3">
        <input class="form-control" asp-for="Input.Period" aria-required="true" />
        <label class="form-label" asp-for="Input.Period"></label>
    </div>

    <button class="btn btn-primary" type="submit">
        Добавить направление
    </button>

</form>