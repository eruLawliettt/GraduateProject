@model GraduateProject.Pages.AddingEntities.ProfessionalModuleCreationModel
@{
}

<form class="col-6 mx-auto my-3" method="post">

    <div class="form-floating mb-3">
        <input class="form-control" asp-for="Input.Code" aria-required="true" />
        <label class="form-label" asp-for="Input.Code"></label>
    </div>

    <div class="form-floating mb-3">
        <input class="form-control" asp-for="Input.Name" aria-required="true" />
        <label class="form-label" asp-for="Input.Name"></label>
    </div>

    <div class="form-floating mb-3">
        <input class="form-control" asp-for="Input.Description" aria-required="true" />
        <label class="form-label" asp-for="Input.Description"></label>
    </div>

    <div class="form-floating mb-3">
        <input class="form-control" asp-for="Input.CertificationHours" aria-required="true" />
        <label class="form-label" asp-for="Input.CertificationHours"></label>
    </div>

    <div class="form-floating mb-3">
        <select class="form-select" asp-for="Input.CertificationForm" aria-required="true">
            @foreach (var certificationForm in Model.CertificationForms)
            {
                <option>@certificationForm.Name</option>
            }
        </select>
        <label class="form-label" asp-for="Input.CertificationForm"></label>
    </div>
                     
    <button class="btn btn-primary" type="submit">
        Добавить модуль
    </button>

</form>
